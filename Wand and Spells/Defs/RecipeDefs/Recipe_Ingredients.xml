    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
				<filter>
				<thingDefs>
					<li>Silver</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
    </ingredients>
    <products>
      <SilverPowder>50</SilverPowder>
    </products>
	<skillRequirements>
		<Crafting>4</Crafting>
	</skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>WSSimpleMagic</researchPrerequisite>
    <recipeUsers>
		<li>TableStonecutter</li>
    </recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>WSComponentElysiumMaking</defName>
