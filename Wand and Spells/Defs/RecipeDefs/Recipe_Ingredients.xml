<?xml version="1.0" encoding="utf-8"?>

<Defs>

<RecipeDef>
    <defName>WSSootMaking</defName>
    <label>make soot from wood logs</label>
    <description>Make wood logs into soot used for silver ink making.</description>
    <jobString>Making wood logs into soot.</jobString>
    <workAmount>1600</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
				<filter>
				<thingDefs>
					<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
    </ingredients>
    <products>
      <WSSoot>20</WSSoot>
    </products>
	<skillRequirements>
		<Crafting>4</Crafting>
	</skillRequirements>
    <workSkill>Crafting</workSkill>
	<researchPrerequisite>WSSpellWriting</researchPrerequisite>
    <recipeUsers>
		<li>Campfire</li>
        <li>FueledSmithy</li>
		<li>ElectricSmithy</li>
    </recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>WSSilverPowderMaking</defName>
