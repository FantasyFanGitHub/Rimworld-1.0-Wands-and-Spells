	<researchPrerequisite>WSWandmaking</researchPrerequisite>
    <recipeUsers>
		<li>WSWandMaker</li>
    </recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>ThrumboHeartExtracting</defName>
    <label>extract the heart from a thrumbo</label>
    <description>Extract the heart from a thrumbo used for advanced wand making.</description>
    <jobString>Extracting heart.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>ButcheryFleshSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
		<efficiencyStat>ButcheryFleshEfficiency</efficiencyStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Corpse_Thrumbo</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <ThrumboHeartString>1</ThrumboHeartString>
    </products>
	<skillRequirements>
		<Cooking>12</Cooking>
	</skillRequirements>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Corpse_Thrumbo</li>
      </thingDefs>
    </fixedIngredientFilter>
	<researchPrerequisite>WSAdvancedWands</researchPrerequisite>
    <recipeUsers>
        <li>TableButcher</li>
    </recipeUsers>
  </RecipeDef>
  
  <RecipeDef>
    <defName>WSInkMaking</defName>
