<?xml version="1.0" encoding="utf-8"?>

<Defs>

<ThingDef ParentName="TreeBase">
    <defName>ElysiumTreePlant</defName>
    <label>elysium tree</label>
    <description>A magical tree that produces elysium wood used for making wands.</description>
    <graphicData>
      <texPath>Things/Building/ElysiumTreePlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <statBases>
      <Beauty>1</Beauty>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<growDays>12</growDays>
			<visualSizeRange>
        <min>0.8</min>
        <max>2.0</max>
      </visualSizeRange>
			<sowMinSkill>8</sowMinSkill>
      <sowTags>
				<li>Ground</li>
			</sowTags>
      <sowResearchPrerequisites>
				<li>WSWandmaking</li>
			</sowResearchPrerequisites>
      <topWindExposure>0.15</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <harvestWork>400</harvestWork>
			<harvestTag>Standard</harvestTag>
      <harvestYield>20</harvestYield>
      <harvestedThingDef>ElysiumWood</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="TreeBase">
    <defName>WSAcaciaTreePlant</defName>
    <label>acacia tree</label>
    <description>A simple tree. You will get gum arabic used for creating silver ink.</description>
    <graphicData>
      <texPath>Things/Building/WSAcaciaPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
        <shadowData>
          <volume>(0.15, 0.3, 0.15)</volume>
          <offset>(0,0,-0.38)</offset>
        </shadowData>
    </graphicData>
    <selectable>true</selectable>
    <statBases>
      <Nutrition>0.5</Nutrition>
    </statBases>
    <ingestible />
		<plant>
			<dieIfLeafless>true</dieIfLeafless>
			<growDays>9</growDays>
			<visualSizeRange>
        <min>0.8</min>
        <max>2.0</max>
      </visualSizeRange>
			<sowMinSkill>6</sowMinSkill>
      <sowTags>
				<li>Ground</li>
			</sowTags>
      <sowResearchPrerequisites>
				<li>WSSpellWriting</li>
			</sowResearchPrerequisites>
      <topWindExposure>0.15</topWindExposure>
      <mustBeWildToSow>false</mustBeWildToSow>
      <harvestWork>400</harvestWork>
			<harvestTag>Standard</harvestTag>
      <harvestYield>10</harvestYield>
      <harvestedThingDef>GumArabic</harvestedThingDef>
      <harvestFailable>true</harvestFailable>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBase">
    <defName>SpellPapyrusPlant</defName>
    <label>spell papyrus</label>
    <description>A magical plant from long forgotten worlds. Sowing and harvesting spell papyrus are both very labor-intensive tasks because of its delicate shoots. It is used for creating mysterious paper.</description>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Building/SpellPapyrusPlant</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>10</pathCost>
    <ingestible />
    <plant>
			<growDays>7</growDays>
			<dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>SpellPapyrus</harvestedThingDef>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
		<li>Hydroponic</li>
      </sowTags>
	  <sowMinSkill>7</sowMinSkill>
	  <sowResearchPrerequisites>
				<li>WSSpellWriting</li>
			</sowResearchPrerequisites>
      <topWindExposure>0.1</topWindExposure>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>

</Defs>